<form id="donation-form" class="donation-form" novalidate>
  <div class="form-row">
    <label for="amount">Donation amount (USD)</label>
    <input id ="amount" name ="amount" type="number" inputmode="decimal" min="1" step="1" value="25" required placeholder="Enter amount" />
  </div>

  <div class="form-row">
    <label for="donorName">Full Name</label>
    <input id ="donorName" name="donorName" type="text" autocomplete="name" required />
  </div>

  <div class="form-row">
    <label for="email">Email (for recipt)</label>
    <input id="email" name="email" type="email" autocomplete="email" />
  </div>

  <div class="form-row">
    <label for="card-element">Card</label>

    {{!-- placeholder --}}
    <div id="card-element" class="card-field"> </div>
    <div id ="card-errors" class="error" role="alert"></div>
  </div>

  <button id="donateBtn" type="submit">Donate</button>

  <p id="donation-success" style="display:none" aria-live="polite">
    Thank you! Your donation was completed.
  </p>

</form>
